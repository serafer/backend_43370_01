<div class="container py-5">


  <div>

    <h2>Compras Finalizadas</h2>

  </div>

  {{#if ticketsMap.length}}

  <table class="table table-striped table-bordered">
    <thead class="bg-primary text-white">
      <tr>
        <th scope="col">Nro de orden</th>
        <th scope="col">Fecha de compra</th>
        <th scope="col">Importe</th>
      </tr>
    </thead>
    <tbod>
      {{#each ticketsMap}}
      <tr>
        <td>{{this.code}}</td>
        <td>{{this.purchase_datetime}}</td>
        <td>{{this.amount}}</td>
      </tr>
      {{/each}}
    </tbod>
  </table>

  {{ else}}


  <div class="dmb-md-5 mt-md-4 pb-1">

    <h2 class="text-black-50 mb-5">Aún no hay compras realizadas. Ve a dar una vuelta por la tienda</h2>

    <div>

      <form method="GET" action="../products">
        <button type="submit" class="btn btn-dark btn-block mb-3">Ir a la sección de productos</button>
      </form>

    </div>
  </div>

  {{/if}}



</div>