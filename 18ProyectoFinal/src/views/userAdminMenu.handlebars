<div class="container py-5">


  <div>

    <h2>Listado de usuarios</h2>

  </div>


  <table class="table table-striped table-bordered">
    <thead class="bg-primary text-white">
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Apellido</th>
        <th scope="col">Email</th>
        <th scope="col">Role</th>
        <th scope="col">Última conexión</th>
        <th scope="col">User<->Premium</th>
        <th scope="col">Eliminar</th>
      </tr>
    </thead>
    <tbod>
      {{#each userMap}}
      <tr>
        <td>{{this.first_name}}</td>
        <td>{{this.last_name}}</td>
        <td>{{this.email}}</td>
        <td>{{this.role}}</td>
        <td>{{this.last_connection}}</td>
        <td>

          <form method="POST" action="../api/users/premium2/{{this._id}}">
            <button type="submit" class="btn btn-dark btn-block mb-3">Role</button>
          </form>

        </td>

        <td>

          <form method="POST" action="../api/users/delete2/{{this._id}}">
            <button type="submit" class="btn btn-dark btn-block mb-3">Eliminar</button>

          </form>


        </td>
      </tr>
      {{/each}}
    </tbod>
  </table>


  <div class="dmb-md-5 mt-md-4 pb-1">

    <div>

      <form method="GET" action="../products">
        <button type="submit" class="btn btn-dark btn-block mb-3">Ir a la sección de productos</button>
      </form>

    </div>
  </div>


</div>